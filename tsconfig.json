{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "types"
    // "emitDeclarationOnly": true,
    // "baseUrl": ".",
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/stories"]
}

